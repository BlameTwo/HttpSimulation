<control:HttpInterfaceView
    x:Class="SimulationApp.Views.UserControls.HttpInterfaceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:SimulationApp.Views.Bases"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SimulationApp.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="5" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <DropDownButton Content="Post">
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Foreground="Green" Text="GET" />
                        <MenuFlyoutItem Foreground="CadetBlue" Text="POST" />
                        <MenuFlyoutItem Foreground="MediumPurple" Text="PUT" />
                        <MenuFlyoutItem Foreground="IndianRed" Text="DELETE" />
                        <MenuFlyoutItem Foreground="DeepSkyBlue" Text="PATCH" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            <TextBox
                Grid.Column="1"
                Margin="5,0,0,0"
                VerticalAlignment="Center" />
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button
                    Margin="5,0,0,0"
                    CornerRadius="10"
                    Style="{ThemeResource TransparentButtonStyle}">
                    <FontIcon
                        FontFamily="Segoe Fluent Icons"
                        FontSize="12"
                        Glyph="&#xE724;" />
                </Button>
                <Button
                    Margin="5,0,0,0"
                    CornerRadius="10"
                    Style="{ThemeResource TransparentButtonStyle}">
                    <FontIcon
                        FontFamily="Segoe Fluent Icons"
                        FontSize="12"
                        Glyph="&#xE792;" />
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <SelectorBar>
                <SelectorBarItem Text="参数">
                    <SelectorBarItem.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEA8B;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="Body">
                    <SelectorBarItem.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE727;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="Header">
                    <SelectorBarItem.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEBE6;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="Cookie">
                    <SelectorBarItem.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xF354;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="Auth">
                    <SelectorBarItem.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE631;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
            </SelectorBar>
        </Grid>
        <controls:GridSplitter Grid.Row="2" />
    </Grid>
</control:HttpInterfaceView>
