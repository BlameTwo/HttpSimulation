<Page
    x:Class="SimulationApp.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:WinUIExtentions.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SimulationApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:myControl="using:SimulationApp.Controls"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <control:TitleBar
            x:Name="titlebar"
            ContentRects="{x:Bind ContentRect, Mode=OneWay}"
            IsExtendsContentIntoTitleBar="True"
            TitleMode="Tall"
            TitleVerticalAlignment="Center">
            <control:TitleBar.Header>
                <MenuBar>
                    <MenuBarItem Title="项目">
                        <MenuFlyoutItem Command="{x:Bind ViewModel.ShowCreateProjectCommand}" Text="新建" />
                        <MenuFlyoutItem Command="{x:Bind ViewModel.OpenProjectCommand}" Text="打开" />
                    </MenuBarItem>
                    <MenuBarItem Title="编辑">
                        <MenuFlyoutItem Text="保存项目" />
                    </MenuBarItem>
                </MenuBar>
            </control:TitleBar.Header>
        </control:TitleBar>
        <Frame x:Name="frame" Grid.Row="1" />
    </Grid>
</Page>