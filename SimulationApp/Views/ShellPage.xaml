        <control:GridSplitter Grid.Column="1" />
        <myControl:AppTabView
            x:Name="tabview"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            AllowDropTabs="False"
            Background="Transparent"
            CloseButtonOverlayMode="OnPointerOver"
            IsAddTabButtonVisible="False"
            SizeChanged="AppTabView_SizeChanged">
            <myControl:AppTabView.TabStripFooter>
                <Button
                    Width="30"
                    Height="30"
                    Margin="0,6,0,0"
                    Padding="0"
                    VerticalAlignment="Stretch"
                    Command="{x:Bind ViewModel.OpenProjectCommand}">
                    <FontIcon
                        FontFamily="Segoe Fluent Icons"
                        FontSize="14"
                        Glyph="&#xE710;" />
                </Button>
            </myControl:AppTabView.TabStripFooter>
        </myControl:AppTabView>
    </Grid>
</Page>